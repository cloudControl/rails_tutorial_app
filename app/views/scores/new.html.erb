<h1>( cloudControl Pacman-as-a-Service )</h1>

<%= form_for @score do |f| %>
  <% if @score.errors.any? %>
	<h2>Errors:</h2>
	<ul>
	  <% @score.errors.full_messages.each do |message| %>
	    <li><%= message %></li>
	  <% end %>
	</ul>
  <% end %>
  <p>
	<%= f.label :nickname %><br />
	<%= f.text_field :nickname %>
  </p>
  <p>
  	<%= f.hidden_field :score, :value => @value %>
	<%= f.submit "Submit Score" %>
  </p>
<% end %>